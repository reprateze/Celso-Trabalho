@model Eventos.Models.Participante

@{
    ViewData["Title"] = "Detalhes do Participante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-image: linear-gradient(to left, #33ffcc, #CCFF99);">
    <div class="container col-lg-6 mt-4">
        <div class="card p-4">
            <h1 class="text-center mb-4">Detalhes do Participante</h1>

            <ul class="list-group">
                <li class="list-group-item"><strong>Nome do Participante:</strong> @Model.Nome</li>
                <li class="list-group-item"><strong>Evento Vinculado:</strong> @Model.Evento?.Nome</li>
                <li class="list-group-item"><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Telefone:</strong> @Model.Telefone</li>
                <li class="list-group-item"><strong>CPF:</strong> @Model.CPF</li>
            </ul>

            <div class="text-center mt-4">
                <a asp-action="Certificado" asp-route-id="@Model.ParticipanteID" class="btn btn-success">
                    Visualizar Certificado
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
