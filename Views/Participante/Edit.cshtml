@model Eventos.Models.Participante

@{
    ViewData["Title"] = "Editar Participante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-image: linear-gradient(to left, #33ffcc, #CCFF99);">
    <div class="container col-lg-6 mt-4">
        <div class="card p-4">
            <h1 class="text-center mb-4">Editar Participante</h1>

            <!-- Formulário de Edição -->
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken() <!-- Proteção CSRF -->
                <input type="hidden" asp-for="ParticipanteID" /> <!-- Campo oculto para o ID do participante -->

                <div class="mb-3">
                    <label for="nomeParticipante" class="form-label">Nome do Participante</label>
                    <input type="text" id="nomeParticipante" asp-for="Nome" class="form-control" required>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="eventoParticipante" class="form-label">Selecione o Evento</label>
                    <select id="eventoParticipante" asp-for="EventoID" class="form-control" asp-items="ViewBag.EventoID" required>
                        <option value="">Selecione um evento</option>
                    </select>
                    <span asp-validation-for="EventoID" class="text-danger"></span>
                </div>

                <!-- Campo Data de Nascimento -->
                <div class="mb-3">
                    <label for="dataNascimento" class="form-label">Data de Nascimento</label>
                    <input type="date" id="dataNascimento" asp-for="DataNascimento" class="form-control" required>
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <!-- Campo Email -->
                <div class="mb-3">
                    <label for="emailParticipante" class="form-label">Email</label>
                    <input type="email" id="emailParticipante" asp-for="Email" class="form-control" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Campo Telefone -->
                <div class="mb-3">
                    <label for="telefoneParticipante" class="form-label">Telefone</label>
                    <input type="tel" id="telefoneParticipante" asp-for="Telefone" class="form-control" required>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <!-- Campo CPF -->
                <div class="mb-3">
                    <label for="cpfParticipante" class="form-label">CPF</label>
                    <input type="text" id="cpfParticipante" asp-for="CPF" class="form-control" required>
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <!-- Botões -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
