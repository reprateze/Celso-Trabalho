@model Eventos.Models.Participante

@{
    ViewData["Title"] = "Excluir Participante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-image: linear-gradient(to left, #33ffcc, #CCFF99);">
    <div class="container col-lg-8 mt-4">
        <div class="card p-4">
            
            <h1 class="text-center mb-4" style="color: red;">Excluir Participante</h1>

            <h3 class="text-center mb-4">Você tem certeza que deseja excluir este participante?</h3>

            <div>
                <h4>Participante</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Evento)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Evento.Nome)
                    </dd>
                </dl>
            </div>

            
            <div class="text-center">
                <form method="post" action="@Url.Action("Delete", "Participante")">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="ParticipanteID" />

                    <button type="submit" class="btn btn-danger">Excluir</button>
                    <a class="btn btn-secondary" href="@Url.Action("Index", "Participante")">Voltar para a lista</a>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
