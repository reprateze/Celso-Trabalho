@model Eventos.Models.Evento

@{
    ViewData["Title"] = "Detalhes do Evento";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-image: linear-gradient(to left, #33ffcc, #CCFF99);">
    <div class="container col-lg-6 mt-4">
        <div class="card p-4">
            <h1 class="text-center mb-4">Detalhes do Evento</h1>

            <ul class="list-group">
                <li class="list-group-item"><strong>Nome do Evento:</strong> @Model.Nome</li>
                <li class="list-group-item"><strong>Quantidade de Participantes:</strong> @Model.Participantes?.Count</li>
            </ul>

          
            <form method="get" asp-action="Details" asp-route-id="@Model.EventoID" class="mt-4">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Pesquisar participantes..." />
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>

          
            <h3 class="mt-4">Participantes</h3>
            <ul class="list-group">
                @foreach (var participante in Model.Participantes)
                {
                    <li class="list-group-item">@participante.Nome</li>
                }
            </ul>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.EventoID" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
