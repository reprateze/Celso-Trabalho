@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      
        body {
            background-color: #f4f4f4;
        }

      
        header {
            background-color: #ffffff; 
            padding: 15px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header-title {
            font-size: 24px;
            font-weight: bold;
            color: #333333;
        }
    </style>
</head>

<body>

    
    <header>
        <div class="container d-flex justify-content-start align-items-center">
            <img src="~/images/1.png" alt="Logo" class="header-image">
            
            <span class="header-title">Eventos</span>

            <style>
                .header-image {
                    width: 50px;
                    height: auto;
                    margin-right: 15px;
                }
            </style>

            <style>
                /* Estilo do Cabeçalho */
                .custom-header {
                    background: linear-gradient(135deg, #6a11cb, #2575fc); 
                    padding: 20px 0;
                    position: relative;
                }

                .container {
                    max-width: 1100px;
                    margin: 0 auto;
                }

                .logo-img {
                    width: 80px;
                }

                .nav-links {
                    list-style: none;
                    display: flex;
                    gap: 20px;
                }

                    .nav-links li {
                        display: inline;
                    }

                    .nav-links a {
                        color: white;
                        text-decoration: none;
                        font-size: 18px;
                        font-weight: bold;
                        transition: color 0.3s;
                    }

                        .nav-links a:hover {
                            color: #ffcc00; /* Cor amarela ao passar o mouse */
                        }
            </style>



        </div>
    </header>

    
    <div class="container">
        @RenderBody()
    </div>

  

    


    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
